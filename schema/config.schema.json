{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "CAF Mobile App configuration",
    "description": "Defines API and asset locations as well as the home tab configuration.",
    "type": "object",
    "properties": {
        "latest_app_version": {
            "description": "The latest version of the app. Used to determine if a new version is available.",
            "type": "string",
            "pattern": "^(\\d+\\.)?(\\d+\\.)?(\\*|\\d+)$"
        },
        "apiServer": {
            "description": "The base URL of the API.",
            "type": "string",
            "format": "uri"
        },
        "canforgens": {
            "description": "The base URL of the CANFORGENS API.",
            "type": "object",
            "properties": {
                "ip": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "ip"
            ]
        },
        "resources": {
            "description": "The URL of the resources data",
            "type": "object",
            "properties": {
                "ip": {
                    "type": "string",
                    "format": "uri"
                },
                "path": {
                    "type": "string",
                    "format": "uri-reference"
                }
            },
            "required": [
                "ip",
                "path"
            ]
        },
        "subscriptions": {
            "description": "The URL of the social media account data.  No longer in use.",
            "type": "object",
            "properties": {
                "ip": {
                    "type": "string",
                    "format": "uri"
                },
                "path": {
                    "type": "string",
                    "format": "uri-reference"
                }
            },
            "required": [
                "ip",
                "path"
            ]
        },
        "feedbackForm": {
            "description": "Localized URL of the feedback form.",
            "type": "object",
            "properties": {
                "web": {
                    "type": "object",
                    "properties": {
                        "en": {
                            "type": "string",
                            "format": "uri"
                        },
                        "fr": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "en",
                        "fr"
                    ]
                }
            },
            "required": [
                "web"
            ]
        },
        "appStore": {
            "description": "Localized App store URLs.",
            "type": "object",
            "properties": {
                "android": {
                    "descrption": "Android app store URL.",
                    "type": "object",
                    "properties": {
                        "en": {
                            "type": "string",
                            "format": "uri"
                        },
                        "fr": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "en",
                        "fr"
                    ]
                },
                "ios": {
                    "descrption": "IOS app store URL.",
                    "type": "object",
                    "properties": {
                        "en": {
                            "type": "string",
                            "format": "uri"
                        },
                        "fr": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "en",
                        "fr"
                    ]
                }
            },
            "required": [
                "android",
                "ios"
            ]
        },
        "homeTab": {
            "description": "The home tab configuration.",
            "type": "object",
            "properties": {
                "backgroundImages": {
                    "description": "List of URLs of background images.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [
                            "url"
                        ]
                    }
                },
                "featuredNews": {
                    "description": "Configure the featured news element.",
                    "type": "object",
                    "properties": {
                        "published": {
                            "description": "If false, it will default to displaying the latest news item.",
                            "type": "boolean"
                        },
                        "size": {
                            "description": "The grid size of the element. 12 is full width.",
                            "type": "string",
                            "pattern": "^\\d+$"
                        },
                        "id": {
                            "description": "The postID of the post to feature.",
                            "type": "string",
                            "pattern": "^\\d+$"
                        }
                    },
                    "required": [
                        "published",
                        "size",
                        "id"
                    ]
                },
                "alerts": {
                    "description": "Red high priority buttons on the home tab.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "published": {
                                "description": "If false, it will not display the button.",
                                "type": "boolean"
                            },
                            "size": {
                                "description": "The grid size of the element. 12 is full width.",
                                "type": "string",
                                "pattern": "^\\d+$"
                            },
                            "en": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "description": "The text of the button.",
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "uri-reference"
                                    }
                                },
                                "required": [
                                    "name",
                                    "url"
                                ]
                            },
                            "fr": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "description": "The text of the button.",
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "uri-reference"
                                    }
                                },
                                "required": [
                                    "name",
                                    "url"
                                ]
                            }
                        },
                        "required": [
                            "published",
                            "size",
                            "en",
                            "fr"
                        ]
                    }
                },
                "buttons": {
                    "description": "Buttons for the home tab.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "published": {
                                "description": "If false, it will not display the button.",
                                "type": "boolean"
                            },
                            "size": {
                                "description": "The grid size of the element. 12 is full width.",
                                "type": "string",
                                "pattern": "^\\d+$"
                            },
                            "en": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "description": "The text of the button.",
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "uri-reference"
                                    }
                                },
                                "required": [
                                    "name",
                                    "url"
                                ]
                            },
                            "fr": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "description": "The text of the button.",
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "uri-reference"
                                    }
                                },
                                "required": [
                                    "name",
                                    "url"
                                ]
                            }
                        },
                        "required": [
                            "published",
                            "size",
                            "en",
                            "fr"
                        ]
                    }
                }
            },
            "required": [
                "backgroundImages",
                "featuredNews",
                "alerts",
                "buttons"
            ]
        }
    },
    "required": [
        "latest_app_version",
        "apiServer",
        "canforgens",
        "resources",
        "subscriptions",
        "feedbackForm",
        "appStore",
        "homeTab"
    ]
}